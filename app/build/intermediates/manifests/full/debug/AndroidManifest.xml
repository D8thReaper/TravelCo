<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.d8threaper.travelco"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="22" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.d8threaper.travelco.app.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/MyMaterialTheme" >
        <activity
            android:name="com.d8threaper.travelco.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.d8threaper.travelco.RegisterActivity"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name="com.d8threaper.travelco.MainActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name="com.d8threaper.travelco.Display"
            android:label="@string/title_activity_display"
            android:parentActivityName="com.d8threaper.travelco.MainActivity" >
        </activity>
        <activity
            android:name="com.d8threaper.travelco.FormActivity"
            android:label="@string/title_activity_form"
            android:parentActivityName="com.d8threaper.travelco.Display" >
        </activity>
    </application>

</manifest>